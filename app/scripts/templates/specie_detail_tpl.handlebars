<table>
  {{#if scientificName}}
    <tr>
      <th>scientific name</th>
      <td class="first-name">{{scientificName}}</td>
      <td class="logos">
        {{#if gbifId}}
        <img src="images/logo_gbif.png" alt="gbif {{gbifId}}">
        {{/if}}
        {{#if speciesPlusId}}
        <img src="images/logo_species.png" alt="Species+ {{speciesPlusId}}">
        {{/if}}
        {{#if speciesId}}
        <img src="images/logo_brazil.png" alt="Brazil {{speciesId}}">
        {{/if}}
      </td>
    </tr>
  {{/if}}
  {{#if kingdomName}}
    <tr>
      <th>kingdom</th>
      <td>{{kingdomName}}</td>
    </tr>
  {{/if}}
  {{#if phylumName}}
    <tr>
      <th>phylum</th>
      <td>{{phylumName}}</td>
    </tr>
  {{/if}}
  {{#if className}}
    <tr>
      <th>class</th>
      <td>{{className}}</td>
    </tr>
  {{/if}}
  {{#if orderName}}
    <tr>
      <th>order</th>
      <td>{{orderName}}</td>
    </tr>
  {{/if}}
  {{#if familyName}}
    <tr>
      <th>family</th>
      <td>{{familyName}}</td>
    </tr>
  {{/if}}

  <tr></tr>

  {{#if commonNames}}
    {{#each commonNames}}
      <tr>
        <th>common names</th>
        <td>wolf <span>[en]</span></td>
      </tr>
    {{/each}}
  {{/if}}

  <tr></tr>

  <tr>
    <th>distribution</th>
    <td>Sao Paulo</td>
  </tr>
  <tr>
    <th></th>
    <td>Rio de Janeiro</td>
  </tr>

  <tr></tr>

  <tr>
    <th>description</th>
    <td>Sao Paulo</td>
  </tr>
  <tr>
    <th></th>
    <td>{{description}}</td>
  </tr>
</table>

<button class="btn-edit" data="description">EDIT description</button>
<button class="btn-edit" data="distribution">EDIT distribution</button>
<button class="btn-edit" data="common-names">EDIT common names</button>

